{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "commonjs",                     
    "lib": ["ES6"],                           
    "allowJs": true,                       
    "outDir": "./dist",                    
    "rootDir": "./src",                       
    "removeComments": true,                
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],     
    "strict": true,                  
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,                  
    "resolveJsonModule": true,
    "experimentalDecorators": true,       
    "emitDecoratorMetadata": true,       
    "skipLibCheck": true,                  
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
