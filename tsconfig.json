{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2016",                          
    "module": "commonjs", 
    "moduleResolution": "node",                    
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ],                           
    "allowJs": true,       
    "sourceMap": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noEmit": false,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowUnreachableCode": true,
    "checkJs": false,
    "outDir": "./dist",
    "rootDir": "./src",                       
    "removeComments": true,                
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],     
    "strict": true,                  
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,                  
    "resolveJsonModule": true,
    "experimentalDecorators": true,       
    "emitDecoratorMetadata": true,       
    "skipLibCheck": true,                  
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@models/*": ["./src/models/*"],
      "@views": ["./src/views/*"],
      "@config": ["./src/config/*"],
      "@common": ["./src/common/*"],
      "@middlewares": ["./src/middlewares/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}
