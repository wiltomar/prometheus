{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ],
    "typescript"
  ],
  "plugins": [
    "babel-plugin-transform-typescript-metadata",
      ["@babel/proposal-decorators", {
        "legacy": true
      }],
      ["module-resolver", {
        "alias": {
          "@config": "./src/config",
          "@controllers": "./src/controllers",
          "@models": "./src/models",
          "@common": "./src/common",
          "@middlewares": "./src/middlewares"          
        }
      }],
      "@babel/plugin-transform-typescript"
  ],
  "ignore": [
    "**/*.spec.ts"
  ]
}
